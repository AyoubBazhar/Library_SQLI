
@model Library_SQLI.ViewModels.UpdateBookVM

<div class="container">
    <h2>Modifier un Livre</h2>
    <form asp-action="Edit" asp-controller="Books" method="post">
        <div class="form-group">
            <label asp-for="Title">Titre</label>
            <input type="text" asp-for="Title" class="form-control" placeholder="Entrez le titre">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Genre">Genre</label>
            <input type="text" asp-for="Genre" class="form-control" placeholder="Entrez le genre">
            <span asp-validation-for="Genre" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary">Modifier</button>
    </form>
</div>
